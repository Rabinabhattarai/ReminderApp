<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/Bluemine"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/Bluemine"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/Bluemine"
            android:layout_marginTop="10dp"
            android:text="Routine no:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/Bluemine"
            android:layout_marginTop="10dp"
            android:id="@+id/showrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/Bluemine"
            android:layout_marginTop="10dp"
            android:text="Date:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/Bluemine"
            android:layout_marginTop="10dp"
            android:id="@+id/showdater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/Bluemine"
            android:layout_marginTop="10dp"
            android:text="Routine Name:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Bluemine"
            android:layout_marginTop="10dp"
            android:id="@+id/shownamer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/Bluemine"
            android:layout_marginTop="10dp"
            android:text="Task to do:"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/Bluemine"
            android:layout_marginTop="10dp"
            android:id="@+id/showtaskr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>
