<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Bluemine"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newroutine">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Enter the detail of new routine"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:text="Name"
    android:textColor="@color/Black"
    android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/namenr"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Date"
            android:textColor="@color/Black"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/dateroutine"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginTop="20dp"
            android:textColor="@color/Black"
            android:layout_marginLeft="30dp"
            android:id="@+id/datepickroutine"
            android:text="Pick a date of routine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/Black"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Task to do"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/routinetask"
            android:layout_marginTop="20dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/saveroutine"
        android:text="SAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    </LinearLayout>