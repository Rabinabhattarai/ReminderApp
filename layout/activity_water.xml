<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightSkyBlue"
    tools:context=".water">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
       android:text="Set your water drinking target"
        android:layout_width="250dp"
        android:textColor="@color/Black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/settarget"
        android:layout_width="50dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="10dp"
            android:text="set"
            android:id="@+id/targetsetbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:text="Remaining"
            android:layout_width="70dp"
            android:textColor="@color/Black"
            android:textSize="13dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:id="@+id/Remaining"
            android:layout_width="70dp"
            android:textColor="@color/Black"
            android:textSize="15dp"
            android:layout_height="wrap_content" />
        </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:text="Target"
                    android:textColor="@color/Black"
                    android:textSize="13dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/Target"
                    android:textColor="@color/Black"
                    android:textSize="15dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />

    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:text="Consumed"
                android:textColor="@color/Black"
                android:textSize="13dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/Consumed"
                android:textColor="@color/Black"
                android:textSize="15dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:text="Pick a target cup"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/onetwentyfive"
         android:src="@drawable/ontf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/twofifty"
            android:src="@drawable/tfuft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/threthirty"
            android:src="@drawable/thr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/fivehun"
            android:src="@drawable/fvf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/sevenfifty"
            android:src="@drawable/sev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/thou"
            android:src="@drawable/tho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/fiveteen"
            android:src="@drawable/fiftyon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/twothou"
            android:src="@drawable/tothou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
